{{#eq report.reportType "audit"}}
<h2>Audit Enrolment Per Course from {{report.fromDate}} to {{report.toDate}}</h2>
<table id = "audit-table" class="table table-striped">
  <thead class="thead">
    <tr>
      <th>Course Name</th>
      <th>Number of Students Auditing Course </th>
    </tr>
  </thead>
  <tbody>
  {{#each report.data}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.count}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>
{{/eq}}


{{#eq report.reportType "grades"}}
<h2>Grade Data Per Course from {{report.fromDate}} to {{report.toDate}}</h2>
  <table id = "grade-table" class="table table-striped">
  <thead class="thead">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Pre-Test Attempt Count</th>
      <th>Post-Test Attempt Count</th>
      <th>Pre-Test Max Score</th>
      <th>Post-Test Max Score</th>
      <th>Pre-Test Min Score</th>
      <th>Post-Test Min Score</th>
      <th>Pre-Test Average Score</th>
      <th>Post-Test Average Score</th>
    </tr>
  </thead>
  <tbody>
  {{#each report.data.courses}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.preTestCount}}</td>
      <td>{{this.postTestCount}}</td>
      <td>{{this.preMax}}</td>
      <td>{{this.postMax}}</td>
      <td>{{this.preMin}}</td>
      <td>{{this.postMin}}</td>
      <td>{{this.preAverage}}</td>
      <td>{{this.postAverage}}</td>
    </tr>
  {{/each}}
  </tbody>
  </table>
{{/eq}}

{{#eq report.reportType "feedback"}}
<h2>Aggregate Feedback Per Course from {{report.fromDate}} to {{report.toDate}}</h2>

{{#each report.data}}
<h5 class = "feedback-course-title">{{this.name}} -- Id: {{this.id}}</h5>
<div class = "feedback-block">
  <table class = "feedback-table table table-striped">
    <thead class = "thead">
      <tr>
        <th>Question</th>
        <th>Strongly Disagree</th>
        <th>Disagree</th>
        <th>Neutral</th>
        <th>Total Agree</th>
        <th>Total Strongly Agree</th>
        <th>Average Response</th>
        <th>Total Repsonses</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.fbQs}}
        {{#eq qType "Rank"}}
          <tr>
            <td>{{question}}</td>
            <td>{{responses.stronglyDisagree}} -- {{responsePercentages.stronglyDisagree}}%</td>
            <td>{{responses.disagree}} -- {{responsePercentages.disagree}}%</td>
            <td>{{responses.neutral}} -- {{responsePercentages.neutral}}%</td>
            <td>{{responses.agree}} -- {{responsePercentages.agree}}%</td>
            <td>{{responses.stronglyAgree}} -- {{responsePercentages.stronglyAgree}}%</td>
            <td>{{avgResponse}} /5</td>
            <td>{{numResponses}}</td>
          </tr>
        {{/eq}}
      {{/each}}
    </tbody>
  </table>
</div>
{{/each}}
{{/eq}}
